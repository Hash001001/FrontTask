<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <import type="android.view.View" />

        <variable
            name="viewModel"
            type="com.example.metafrontsample.ui.bottom_navigations.viewModels.BottomNavigationHomeFragmentViewModel" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <ImageView
            android:id="@+id/expandable_bg"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/ic_expandable_bg"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginHorizontal="@dimen/_4sdp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/horizontalGuideLine"
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            app:layout_constraintGuide_percent="0.12"
            android:orientation="horizontal" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/verticalGuideLine"
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            app:layout_constraintGuide_percent="0.08"
            android:orientation="vertical" />

        <TextView
            android:id="@+id/tvheader"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="@color/textcolor"
            android:text="SCHON, DASS\nDU DA BIST!"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="@dimen/_12sdp"
            android:lineSpacingMultiplier="0.6"
            android:fontFamily="@font/sairacondensed_extrabold"
            android:textSize="@dimen/_40sdp"
            app:layout_constraintStart_toEndOf="@+id/verticalGuideLine"
            app:layout_constraintTop_toBottomOf="@+id/horizontalGuideLine" />

        <TextView
            android:id="@+id/tvsecondary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/verticalGuideLine"
            app:layout_constraintTop_toBottomOf="@+id/tvheader"
            android:text="Dein Status"
            android:textSize="@dimen/_15sdp"
            android:fontFamily="@font/sairacondensed_semibold"
            android:textColor="@color/textsecondarycolor" />

        <View
            android:id="@+id/view"
            android:layout_width="0dp"
            android:layout_height="@dimen/_1sdp"
            app:layout_constraintStart_toStartOf="@+id/tvsecondary"
            app:layout_constraintEnd_toEndOf="@id/tvsecondary"
            android:background="@color/textcolor"
            app:layout_constraintTop_toBottomOf="@+id/tvsecondary" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/exapndItem"
            android:layout_width="0dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="@dimen/_15sdp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@+id/verticalGuideLine"
            app:layout_constraintTop_toBottomOf="@+id/view"
            android:layout_marginVertical="@dimen/_12sdp">


            <ImageView
                android:id="@+id/cr1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_circle"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <View
                android:id="@+id/v1"
                android:layout_width="@dimen/_1sdp"
                android:layout_height="@dimen/_30sdp"
                android:background="@color/textcolor"
                app:layout_constraintTop_toBottomOf="@+id/cr1"
                app:layout_constraintBottom_toTopOf="@+id/cr2"
                app:layout_constraintStart_toStartOf="@+id/cr1"
                app:layout_constraintEnd_toEndOf="@+id/cr1"
                android:layout_marginVertical="@dimen/_5sdp" />

            <TextView
                android:id="@+id/tv1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toEndOf="@id/cr1"
                app:layout_constraintTop_toTopOf="@+id/cr1"
                app:layout_constraintBottom_toBottomOf="@+id/cr1"
                android:text="Dein Status"
                android:textSize="@dimen/_14sdp"
                android:fontFamily="@font/sairacondensed_extrabold"
                android:textColor="@color/textsecondarycolor"
                android:layout_marginStart="@dimen/_8sdp" />


            <TextView
                android:id="@+id/tv2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="@id/tv1"
                app:layout_constraintTop_toBottomOf="@+id/tv1"
                android:text="Abgeschlossen"
                android:textSize="@dimen/_14sdp"
                android:fontFamily="@font/sairacondensed_regular"
                android:textColor="@color/textcolor" />


            <ImageView
                android:id="@+id/cr2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_circle"
                app:tint="@color/textsecondarycolor"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/v1"
                android:layout_marginTop="@dimen/_6sdp" />

            <TextView
                android:id="@+id/tv3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="@id/tv1"
                app:layout_constraintTop_toTopOf="@+id/cr2"
                app:layout_constraintBottom_toBottomOf="@+id/cr2"
                android:text="Adressprüfung"
                android:textSize="@dimen/_14sdp"
                android:fontFamily="@font/sairacondensed_extrabold"
                android:textColor="#4D4D4D" />


            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/hiddenLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/cr2"
                android:layout_marginTop="@dimen/_8sdp"
                android:visibility="gone"
                android:animateLayoutChanges="true">

                <ImageView
                    android:id="@+id/cr3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_circle"
                    app:tint="@color/textsecondarycolor"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/v3"
                    android:layout_marginTop="@dimen/_6sdp" />

                <View
                    android:id="@+id/v3"
                    android:layout_width="@dimen/_1sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:background="@color/textcolor"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="@+id/cr3"
                    app:layout_constraintEnd_toEndOf="@+id/cr3" />

                <TextView
                    android:id="@+id/tv4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toEndOf="@id/cr3"
                    app:layout_constraintTop_toTopOf="@+id/cr3"
                    app:layout_constraintBottom_toBottomOf="@+id/cr3"
                    android:text="Bauphase"
                    android:textSize="@dimen/_14sdp"
                    android:fontFamily="@font/sairacondensed_extrabold"
                    android:textColor="@color/textsecondarycolor"
                    android:layout_marginStart="@dimen/_8sdp" />

                <View
                    android:id="@+id/v4"
                    android:layout_width="@dimen/_1sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:background="@color/textcolor"
                    app:layout_constraintTop_toBottomOf="@+id/cr3"
                    app:layout_constraintStart_toStartOf="@+id/cr3"
                    app:layout_constraintEnd_toEndOf="@+id/cr3"
                    android:layout_marginTop="@dimen/_8sdp" />

                <ImageView
                    android:id="@+id/cr4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_circle"
                    app:tint="@color/textsecondarycolor"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/v4"
                    android:layout_marginTop="@dimen/_6sdp" />

                <TextView
                    android:id="@+id/tv5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="@id/tv4"
                    app:layout_constraintTop_toTopOf="@+id/cr4"
                    app:layout_constraintBottom_toBottomOf="@+id/cr4"
                    android:text="Freischaltung"
                    android:textSize="@dimen/_14sdp"
                    android:fontFamily="@font/sairacondensed_extrabold"
                    android:textColor="#4D4D4D" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <ImageView
                android:id="@+id/btnDropDown"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_down"
                app:layout_constraintTop_toBottomOf="@+id/hiddenLayout"
                app:layout_constraintStart_toStartOf="parent"
                android:paddingVertical="@dimen/_8sdp"
                android:paddingHorizontal="@dimen/_2sdp"
                android:layout_marginTop="@dimen/_15sdp" />

            <TextView
                android:id="@+id/tvupDown"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toEndOf="@+id/btnDropDown"
                app:layout_constraintTop_toTopOf="@+id/btnDropDown"
                app:layout_constraintBottom_toBottomOf="@+id/btnDropDown"
                android:text="Mehr"
                android:textColor="@color/textsecondarycolor"
                android:textSize="@dimen/_15sdp"
                android:layout_marginStart="@dimen/_8sdp"
                android:fontFamily="@font/sairacondensed_semibold" />

        </androidx.constraintlayout.widget.ConstraintLayout>


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/verticalGuideLine"
            android:layout_marginEnd="@dimen/_12sdp"
            android:layout_marginTop="@dimen/_13sdp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/exapndItem"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="@dimen/_20sdp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_expand_arrow_bg"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />

            <TextView
                android:id="@+id/tvheader1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:text="Antrag Stellan"
                android:fontFamily="@font/sairacondensed_semibold"
                android:textColor="@color/textsecondarycolor"
                android:layout_margin="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_12sdp"
                android:layout_marginStart="@dimen/_15sdp" />

            <TextView
                android:id="@+id/tvheader2"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintTop_toBottomOf="@+id/tvheader1"
                app:layout_constraintStart_toStartOf="@+id/tvheader1"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="@dimen/_25sdp"
                android:text="Internet bleibt bei 0€. Dauerhaft. Es gibt keine versteckten Kosten. *"
                android:fontFamily="@font/sairacondensed_regular"
                android:textColor="@color/textsecondarycolor"
                app:layout_constraintBottom_toBottomOf="parent"
                android:lineSpacingMultiplier="0.7"
                android:textSize="@dimen/_12sdp" />

        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>